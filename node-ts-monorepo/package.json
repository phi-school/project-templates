{
	"private": true,
	"workspaces": [
		"packages/*",
		"scripts/*"
	],
	"scripts": {
		"build": "turbo build",
		"create-package": "node scripts/create-package",
		"dev": "turbo dev --no-cache --continue",
		"format:check": "prettier --check \"**/*.{js,json,md,ts}\"",
		"format": "prettier --write \"**/*.{js,json,md,ts}\"",
		"lint": "turbo lint",
		"prepare": "husky install",
		"publish": "changeset publish",
		"release": "pnpm run build && pnpm run publish",
		"test": "turbo test",
		"type-check": "turbo type-check"
	},
	"devDependencies": {
		"@changesets/cli": "^2.26.2",
		"@commitlint/cli": "^19.2.2",
		"@commitlint/config-conventional": "^19.2.2",
		"@commitlint/load": "^19.2.0",
		"@phi.school/eslint-config": "^0.3.0",
		"@phi.school/prettier-config": "^0.2.0",
		"@types/node": "^20.12.7",
		"@vitest/ui": "^1.5.0",
		"dotenv": "^16.4.5",
		"eslint": "^9.0.0",
		"husky": "^9.0.11",
		"lint-staged": "^15.2.2",
		"prettier": "^3.2.5",
		"tsup": "^8.0.2",
		"turbo": "^1.13.2",
		"typescript": "^5.4.5",
		"valibot": "^0.30.0",
		"vite-tsconfig-paths": "^4.3.2",
		"vitest": "^1.5.0"
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"eslintConfig": {
		"extends": [
			"@phi.school/eslint-config"
		]
	},
	"lint-staged": {
		"*.{js,ts}": "eslint --cache --fix",
		"*.{js,json,md,ts}": "prettier --write"
	},
	"prettier": "@phi.school/prettier-config"
}
