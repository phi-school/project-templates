{
	"private": true,
	"workspaces": [
		"packages/*",
		"scripts/*"
	],
	"scripts": {
		"build": "turbo build",
		"create-package": "node scripts/create-package",
		"dev": "turbo dev --no-cache --continue",
		"format:check": "prettier --check \"**/*.{js,json,md,ts}\"",
		"format": "prettier --write \"**/*.{js,json,md,ts}\"",
		"lint": "turbo lint",
		"prepare": "husky install",
		"publish": "changeset publish",
		"release": "pnpm run build && pnpm run publish",
		"test": "turbo test",
		"type-check": "turbo type-check"
	},
	"devDependencies": {
		"@changesets/cli": "^2.26.2",
		"@commitlint/cli": "^17.7.2",
		"@commitlint/config-conventional": "^17.7.0",
		"@phi.school/eslint-config": "^0.1.1",
		"@phi.school/prettier-config": "^0.1.0",
		"@types/node": "^20.8.4",
		"dotenv": "^16.3.1",
		"eslint": "^8.51.0",
		"husky": "^8.0.3",
		"lint-staged": "^14.0.1",
		"prettier": "^3.0.3",
		"tsup": "^7.2.0",
		"turbo": "^1.10.15",
		"typescript": "^5.2.2",
		"vitest": "^0.34.6"
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"eslintConfig": {
		"extends": [
			"@phi.school/eslint-config"
		]
	},
	"lint-staged": {
		"*.{js,ts}": "eslint --cache --fix",
		"*.{js,json,md,ts}": "prettier --write"
	},
	"prettier": "@phi.school/prettier-config"
}
